<h2>Create Your Post!</h2>
<hr>

<div class="well">
<%= form_for @post, :html => { :class => 'form-horizontal' } do |f| %>
 
<div class="field">
  <%= f.label :title %>
  <%= f.text_field :title, placeholder: "post title..." %></div>
<br />

<div class="field">
  <%= f.label :category %>
  <%= f.text_field :category, placeholder: "categories..." %></div>
<br />

<div class="field">
<%= f.label :content %>
  <%= f.text_area :content, placeholder: "post contnet...", class: "span4", :rows => 4 %>
</div>
<br />

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                posts_path, :class => 'btn' %>
  </div>
<% end %>
</div>
