<%- model_class = @post.class -%>

<div class="container">
<h2 class="happy"><%= @post.title %></h2>
<p><%= @post.tag_list.sample %></p>
<hr>
<div class="row">
<div class="span10 offset1">
<div class="well">
<%= raw @post.content %>
</div>
</div>
</div>

<hr>

<div class="container">
<p><a href="mailto:cam.fortin@gmail.com">email me</a> | <a href="http://www.twitter.com/#!/camfortin">@camfortin</a> | <a href="http://www.steepravine.com">my tumblr</a> | <%= link_to "personal goals", goals_path %></p>
</div>

<hr>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              posts_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_post_path(@post), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              post_path(@post),
              :method => 'delete',
              :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
              :class => 'btn btn-danger' %>
</div>
</div>